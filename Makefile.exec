# project name (generate executable with this name)
TARGET   = rlogger

# change these to set the proper directories where each files should be
SRCDIR   = src
HDRDIR   = hdr
OBJDIR   = obj
BINDIR   = bin

CC       = g++
# compiling flags here
CFLAGS   = -g -Wall -DLINUX -I. -I$(HDRDIR)

LINKER   = g++ -g -o
# linking flags here
LFLAGS   = -Wall -I. -lm

LDFLAGS  = -pthread

SOURCES  := $(wildcard $(SRCDIR)/*.cc)
INCLUDES := $(wildcard $(HDRDIR)/*.h)
OBJECTS  := $(SOURCES:$(SRCDIR)/%.cc=$(OBJDIR)/%.o)
rm        = rm -rf

all: $(BINDIR)/$(TARGET)
	@mkdir -p $(OBJDIR)
	@mkdir -p $(BINDIR)
	
$(BINDIR)/$(TARGET): $(OBJECTS)
	@$(LINKER) $@ $(LFLAGS) $(LDFLAGS) $(OBJECTS)
	@echo "Linking complete!"

$(OBJECTS): $(OBJDIR)/%.o : $(SRCDIR)/%.cc
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "Compiled "$<" successfully!"

clean:
	@$(rm) $(OBJECTS)
	@$(rm) $(OBJDIR)
	@echo "Cleanup complete!"

distclean: clean
	$(rm) $(BINDIR)
	@$(rm) $(BINDIR)/$(TARGET)
	@echo "Executable removed!"

count:
	find . -type f -name "*.h"|xargs wc -l
	find . -type f -name "*.cc"|xargs wc -l
	@echo "Lines of code counted!"

.PHONEY: all clean distclean count
